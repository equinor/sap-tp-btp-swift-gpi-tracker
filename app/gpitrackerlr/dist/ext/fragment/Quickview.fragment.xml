<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <QuickView id="quickView">
        <QuickViewPage
            id="qpage1"
            pageId="{pageId}"
            title="{header}"
            description="{description}"
            groups="{
				path: 'groups',
				templateShareable: false
			}"
        >
            <QuickViewGroup
                id="group1"
                heading="{heading}"
                elements="{
					path: 'elements',
					templateShareable: false
				}"
            >
                <QuickViewGroupElement
                    id="element1"
                    label="{label}"
                    value="{value}"
                    url="{url}"
                    type="{elementType}"
                />
            </QuickViewGroup>
        </QuickViewPage>
    </QuickView>
</core:FragmentDefinition>
